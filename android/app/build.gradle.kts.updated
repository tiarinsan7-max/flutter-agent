plugins {
    id("com.android.application")
    id("kotlin-android")
    // The Flutter Gradle Plugin must be applied after the Android and Kotlin Gradle plugins.
    id("dev.flutter.flutter-gradle-plugin")
}

android {
    namespace = "com.example.ai_agent_assistant"
    compileSdk = flutter.compileSdkVersion
    ndkVersion = flutter.ndkVersion

    compileOptions {
        sourceCompatibility = JavaVersion.VERSION_17
        targetCompatibility = JavaVersion.VERSION_17
    }

    kotlinOptions {
        jvmTarget = JavaVersion.VERSION_17.toString()
    }

    defaultConfig {
        // Application ID - Change this to your own
        applicationId = "com.example.ai_agent_assistant"
        minSdk = flutter.minSdkVersion
        targetSdk = flutter.targetSdkVersion
        versionCode = flutter.versionCode
        versionName = flutter.versionName
    }

    // Load keystore properties for signing
    val keystorePropertiesFile = rootProject.file("android/key.properties")
    val keystoreProperties = java.util.Properties()
    
    if (keystorePropertiesFile.exists()) {
        keystoreProperties.load(keystorePropertiesFile.inputStream())
    }

    // Setup signing configs
    signingConfigs {
        create("release") {
            keyAlias = keystoreProperties.getProperty("keyAlias", "upload")
            keyPassword = keystoreProperties.getProperty("keyPassword")?.let { if (it.isBlank()) null else it }
            storeFile = keystoreProperties.getProperty("storeFile")?.let { file(it) }
            storePassword = keystoreProperties.getProperty("storePassword")?.let { if (it.isBlank()) null else it }
            
            // Allow building without signing config in development
            if (storePassword == null || keyPassword == null || storeFile == null) {
                println("⚠️  Note: Release signing config incomplete. Using debug config.")
                keyAlias = null
                keyPassword = null
                storeFile = null
                storePassword = null
            }
        }
    }

    buildTypes {
        debug {
            debuggable = true
        }
        release {
            signingConfig = if (keystoreProperties.getProperty("storePassword") != null) {
                signingConfigs.getByName("release")
            } else {
                signingConfigs.getByName("debug")
            }
            
            minifyEnabled = true
            shrinkResources = true
            
            proguardFiles(
                getDefaultProguardFile("proguard-android-optimize.txt"),
                "proguard-rules.pro"
            )
        }
    }
}

